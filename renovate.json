{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "baseBranches": [
    "main"
  ],
  "dependencyDashboard": true,
  "extends": [
    "config:recommended",
    "group:allNonMajor"
  ],
  "ignorePaths": [
    "packages/deprecated/**"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "groupName": "node",
      "matchPackageNames": [
        "node"
      ],
      "allowedVersions": "20.x"
    },
    {
      "matchPackageNames": [
        "eslint"
      ],
      "allowedVersions": "8.x"
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    }
  ],
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "rangeStrategy": "bump",
  "rebaseWhen": "conflicted",
  "schedule": [
    "every weekday"
  ],
  "assignAutomerge": true,
  "semanticCommits": "enabled",
  "separateMajorMinor": true,
  "minimumReleaseAge": "3 days",
  "timezone": "America/Toronto",
  "updatePinnedDependencies": false
}
