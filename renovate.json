{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "baseBranches": [
    "main"
  ],
  "dependencyDashboard": true,
  "extends": [
    "config:base",
    "group:allNonMajor"
  ],
  "ignorePaths": [
    "packages/deprecated/**"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "enabled": false,
      "groupName": "node",
      "matchPackageNames": [
        "node"
      ]
    }
  ],
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "rangeStrategy": "bump",
  "rebaseWhen": "conflicted",
  "schedule": [
    "before 11am on Monday"
  ],
  "semanticCommits": "enabled",
  "separateMajorMinor": true,
  "stabilityDays": 3,
  "timezone": "America/Toronto",
  "updatePinnedDependencies": false
}
