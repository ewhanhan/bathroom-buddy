{
  "name": "ewhan-nextjs-boilerplate",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.6.0",
  "scripts": {
    "dev": "cross-env NODE_OPTIONS='--inspect' next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check-types": "tsc --noEmit --pretty --incremental false",
    "clean": "rimraf .next out",
    "build-stats": "cross-env ANALYZE=true npm run build",
    "prepare": "husky",
    "prisma:migrate:dev": "pnpm prisma migrate dev --skip-seed",
    "prisma:migrate:dev:env": "dotenv -e .env.development.local -- sh -c 'pnpm prisma:migrate:dev'",
    "prisma:validate:dev:env": "dotenv -e .env.development.local -- sh -c 'pnpm prisma validate'",
    "cmd:start:dev": "pnpm prisma:migrate:dev && pnpm dev",
    "prisma:studio:dev:env": "dotenv -e .env.development.local -- sh -c 'pnpm prisma studio'",
    "prisma:reset:dev:env": "dotenv -e .env.development.local -- sh -c 'pnpm prisma migrate reset dev --skip-seed'",
    "prisma:migrate:prod": "pnpm prisma migrate deploy",
    "prisma:migrate:prod:env": "dotenv -e .env.production.local -- sh -c 'pnpm prisma:migrate:prod'",
    "prisma:push": "pnpm prisma db push",
    "prisma:seed": "pnpm prisma db seed",
    "prisma:seed:dev:env": "dotenv -e .env.development.local -- sh -c 'pnpm prisma:seed'",
    "cmd:start:prod": "pnpm prisma:migrate:prod && pnpm prisma:seed && pnpm start"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.4.2",
    "@prisma/client": "^5.17.0",
    "@radix-ui/react-avatar": "^1.1.0",
    "@radix-ui/react-collapsible": "^1.1.0",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-navigation-menu": "^1.2.0",
    "@radix-ui/react-slot": "^1.1.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "dotenv-cli": "^7.4.2",
    "lucide-react": "^0.418.0",
    "next": "14.2.5",
    "next-auth": "5.0.0-beta.20",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.4.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.24.1",
    "@eslint-react/eslint-plugin": "^1.7.1",
    "@next/bundle-analyzer": "^14.2.5",
    "@svgr/webpack": "^8.1.0",
    "@tailwindcss/forms": "^0.5.7",
    "@types/node": "^20.14.13",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.19",
    "cross-env": "^7.0.3",
    "cssnano": "^7.0.4",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.5",
    "eslint-plugin-format": "^0.1.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.9",
    "eslint-plugin-tailwindcss": "^3.17.4",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.40",
    "prisma": "^5.17.0",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  }
}
